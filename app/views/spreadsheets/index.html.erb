<div class="edit-page">
	<div class="topper"></div>
	<div class="main-content">
		<h2>List of current spreadsheets:</h2>
		<ul class="spreadsheet-list">
			<% @hash.each do |key, value| %>
			<li class="spreadsheet-preview">
				<div class="majority-width">
					<p class="spreadsheet-name semi-bold-item full-width-clearer"><%= key %></p>
					<p class="update-time">Last updated: <%= created_at_regardless(value) %></p>	
				</div>
				<div class="minor-width">
					<% unless value.nil? %>
						<%= link_to "View!", spreadsheet_path(key), :class => "spreadsheet-view-link" %>
					<% end %>
				</div>
			</li>
			<% end %>
		</ul>

		<%= link_to "Upload a Spreadsheet", new_spreadsheet_path %>

		<% unless @current_jobs.nil? %>
		<h2>Current spreadsheets being processed:</h2>
		<ul>
			<% @current_jobs.each do |f| %>
				<li><%= f.table %></li>
			<% end %>
		</ul>
		<% else %>
		  <h2>There are currently no jobs waiting to be processed.</h2>
		<% end %>
	</div>
	<div class="bottom"></div>	
</div>
