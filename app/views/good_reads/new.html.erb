<h1>New Good Read</h1>

<%= render "shared/error_messages", :target => @post %>


<% form_for @post, :html => { :multipart => true } do |f| -%>
	<%= f.label :title, "Title" %><br>
	<%= f.text_field :title %> &nbsp;&nbsp;&nbsp;&nbsp;<%= Date.today.strftime("%d %B %Y") %><br>

	<%= f.label :post, "Post" %><br>
	<%= f.text_area :post, :class => "mceEditor" %><br><br>
	
	<%= f.label :catagory, "Category" %>
	<%= select :good_read, :catagory_id, Catagory.find(:all).collect{|p| [p.name, p.id]} %><br>

	<%= f.file_field :image %><br>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
<% end -%>