<h1>Good Reads</h1>

<%= render "shared/error_messages", :target => @post %>

<% form_for @post, :html => { :multipart => true } do |f| -%>
	<%= f.label :title, "Title" %><br>
	<%= f.text_field :title %><br>

	<%= f.label :post, "Post" %><br>
	<%= f.text_area :post %><br><br>
	
	<%= f.label :catagory, "Category" %>
	<%= select :good_read, :catagory_id, Catagory.find(:all).collect{|p| [p.name, p.id]} %><br>

	
	<% unless @post.image.nil? %>
		<%= image_tag @post.image.url(:thumb) %>
	<% end %>
	<%= f.file_field :image, :accept => "jpg/png" %><br>	
	<%= f.submit "Update", :disable_with => 'Updating...' %>
<% end -%>
