<h1>GOOD READS</h1>
<% if @posts.empty? %>
	<p>No Posts. Please check back soon. </p>
<% else %>
	<%= paginate @posts %>

	<% @posts.each do |f| %>

		<%= f.title %><br>
		<%= special_date(f.created_at) %><br>
		<%= link_to "#{f.category.name}", :action => "show_categories", :id => f.category.name %><br>
		<% if f.image? %>
			<%= image_tag f.image.url(:medium) %><br>
		<% end %>

		<%= shorten(f.post.html_safe) %><br><br>

		<%= link_to "Read More", good_read_path(f.id) %>

	<% end %>
<% end %>
<%= render :partial => 'categories' %>

<%= render :partial => 'dates' %>
