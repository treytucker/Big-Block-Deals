<h1>Good Reads</h1>
<!--
	TODO Needs to add style to the flash notices
	TODO Need to create a partial for viewing the post...Same for all the pages. 
-->
<p><%= flash.notice %></p><br>
<% @post %>

	<h1><%= @post.title %></h1><br>
	<p><%= special_date(@post.created_at) %></p><br>

	<% unless @post.catagory.nil? %>
		<h1><%= @post.catagory.name %></h1><br>
	<% end %>

	<% if @post.image? %>
		<%= image_tag @post.image.url(:medium) %>
	<% end %>


		&nbsp;<br><p><%= @post.post.html_safe %></p>
		<% unless session[:admin_id] %>

			&nbsp;<br><br>
			<%= link_to "Edit This Post", edit_good_read_path(@post.id) %><br><br>
			<%= link_to "Delete This Post", { :action => "destroy", :id => @post.id }, :confirm => 'Are you sure?', :method => :delete %>	

		<% end %>

<br><br>
<%= link_to "Back to Good Reads", good_reads_path %>
