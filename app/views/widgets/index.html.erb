<div class="edit-page">
	<div class="topper"></div>
	<div class="main-content">
		<h2>All Dem Widgets</h2>
		<%= link_to "New Widget", new_widget_path %>
		<div class="all-widget-previews">
			<% @widgets.each do |f| %>
				<% unless f.text_1 == nil || f.text_1.empty? %>
				<div class="video-widget-preview full-width-clearer">
					<table border="0" cellspacing="5" cellpadding="5">
						<tr>
							<td class="widget-iframe"><%= f.text_1.html_safe %></td>
							<td class="main-widget-stuff">
								<h2 class="semi-bold-item"><%= f.title %></h2>
								<% if f.widget_image? %>
									<%= image_tag f.widget_image.url(:mini) %>
								<% end %>	
								<div class="widget-text-stuff">
									<% if f.text_2 %>
										<p><%= f.text_2.html_safe %></p>
									<% end %>
									<p class="full-width-clearer"><%= f.bottom_title %></p>
								</div>
								<p class="full-width-clearer">Active Pages: <%= active(f).to_sentence %></p>	
							</td>
							<td class="right-side-edit-button"><%= link_to "Edit", edit_widget_path(f.id) %></td>
						</tr>
					</table>
				</div>				
				
				<% else %>
			
				<div class="widget-preview full-width-clearer">
					<table border="0" cellspacing="5" cellpadding="5">
						<tr>
							<td class="main-widget-stuff">
								<h2 class="semi-bold-item"><%= f.title %></h2>
								<% if f.widget_image? %>
									<%= image_tag f.widget_image.url(:mini) %>
								<% end %>	
								<div class="widget-text-stuff">
									<% if f.text_2 %>
										<p><%= f.text_2.html_safe %></p>
									<% end %>
									<p class="full-width-clearer"><%= f.bottom_title %></p>
								</div>
								<p class="full-width-clearer">Active Pages: <%= active(f).to_sentence %></p>	
							</td>
							<td class="right-side-edit-button"><%= link_to "Edit", edit_widget_path(f.id) %></td>
						</tr>
					</table>
				</div>
			
				<% end %>
				<%= f.bottom_title %>
				<p>Activated on: <%= active(f).to_sentence %></p>
				<%= link_to "Edit", edit_widget_path(f.id) %>
				<%= link_to "Delete", { :action => "destroy", :id => f.id }, :confirm => 'Are you sure?', :method => :delete %>
			</div>
			<% end %>
			
		</div>
	</div>
	<div class="bottom"></div>
</div>