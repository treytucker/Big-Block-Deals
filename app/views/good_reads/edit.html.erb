<h1>Good Reads</h1>

<%= render "shared/error_messages", :target => @post %>

<%= form_for @post, :html => { :multipart => true, :method => :put } do |f| -%>

	<%= f.label :title, "Title" %><br>
	<%= f.text_field :title %><br>

	<%= f.label :post, "Post" %><br>
	<%= f.text_area :post, :class => "mceEditor" %><br><br>
	
	<%= f.label :catagory, "Category" %>
	
	<%= f.collection_select( :catagory_id, @catagories, :id, :name, options ={:prompt => "-Select a catagory"}, :class =>"catagory") %>
	
	<% if @post.image? %>
		<%= image_tag @post.image.url(:thumb) %><br><br>
		<%= f.label :image_delete, "Delete that image!" %>
	    <%= f.check_box :image_delete %><br>
	<% end %>
	
	
	<br><%= f.file_field :image, :accept => "jpg/png" %><br>	
	<%= f.submit "Update", :disable_with => 'Updating...' %>
<% end -%>
