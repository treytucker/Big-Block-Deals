<!DOCTYPE html>
<html>
<head>
  <title>Bigblockdeals | <%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'jquery', 'global', 'mbScrollable' %>
  <%= csrf_meta_tag %>
</head>
<body>

	<%= render  'layouts/navigation' %>

	<div id="greater-container">
		<div id="container">
			<%= render 'layouts/quotes' %>
			
			<div class="content <%= @layout %>">
				<div class="topper"></div>
				<div class="main-content">
					<%= yield %>
				</div>
				<div class="bottom"></div>
			</div>
			
			<%= render 'layouts/widgets' %>

			<% if @layout == 'three-fourths' %>
				<%= render 'layouts/sidebar' %>
			<% end %>

		</div>
	</div>

	<%= render 'layouts/footer' %>

</body>
</html>
<%= debug(params) if Rails.env.development? %>

