				<% end %>
				<% if f.title %>
					<h3 class="widget-title"><%= f.title %></h3>
				<% end %>
				<% if f.text_2 %>
					<span class="widget-text"><%= f.text_2.html_safe %></span>
				<% end %>
				<% if f.bottom_title %>
					<span class="minor-widget-text"><%= f.bottom_title %></span>
				<% end %>
			</div>
			<div class="widget-bottom"></div>
		</li>	
		<% end %>
	</ul>

<% end %>
	



