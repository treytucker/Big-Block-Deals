<h1>GOOD READS</h1>
<% if @posts.nil? %>
	<p>No New Posts. Please check back soon. </p>
<% elsif @posts.empty? %>
	<p>No New Posts. Please check back soon. </p>
<% else %>
  

	<% if flash[:notice] %>
		<%= flash[:notice] %>
	<% end %>
<!-- This is for the first post	 -->
	<h2><%= @posts[0].title %></h2>
	
	<p><%= special_date(@posts[0].created_at) %></p><br>
	
	
	<% unless @posts[0].catagory.nil? %>
		<%= link_to "#{@posts[0].catagory.name}", :action => "show_catagories", :id => @posts[0].catagory.name %><br>
	<% end %>
	
	<% unless @posts[0].image.nil? %>
		<%= image_tag @posts[0].image.url(:medium) %>
	<% end %>
	
	&nbsp;<br><p><%= shorten(@posts[0].post) %><br><br>
	<%= link_to "Read More", good_read_path(@posts[0].id) %></p>&nbsp;<br><br>

<!-- This is for all the posts after -->
	<% i = 1 %>
	<% until i == @num %>
	<% unless @posts[i].nil? %>
		<br>
		<h2><%= @posts[i].title %></h2>
		
		<p><%= special_date(@posts[i].created_at) %></p><br>
		
		<% unless @posts[i].catagory.nil? %>
			<%= link_to "#{@posts[i].catagory.name}", :action => "show_catagories", :id => @posts[i].catagory.name %>&nbsp;<br>
		<% end %>
		
		<% unless @posts[i].image.nil? %>
			<%= image_tag @posts[i].image.url(:medium) %>
		<% end %>
		
		<br>&nbsp;<br><p><%= shorten(@posts[i].post) %><br><br>
		
		<%= link_to "Read More", good_read_path(@posts[i].id) %></p><br>&nbsp;<br><br>
	<% end %>
	<% i += 1 %>
	<% end %>
	
<% end %>

<%= render :partial => 'catagories' %>

<%= render :partial => 'dates' %>
