<div class="edit-page">
	<div class="topper"></div>
	<div class="main-content">
		<h2>All Dem Widgets</h2>
		<%= link_to "New Widget", new_widget_path %>
		<div class="all-widget-previews">
			<% @widgets.each do |f| %>
			<div class="widget-preview">
				<% if f.title %>
					<h2><%= f.title %></h2>
				<% end %>
				<% if f.text_1 %>
					<%= f.text_1.html_safe %>
				<% end %>
				<% if f.text_2 %>
					<p><%= f.text_2.html_safe %></p>
				<% end %>
				<% if f.widget_image? %>
					<%= image_tag f.widget_image.url(:shrunk) %>
				<% end %>
				<% if f.bottom_title %>
				 <%= f.bottom_title %>
				<% end %>
			</div>
			<% end %>
			
		</div>
	</div>
	<div class="bottom"></div>
</div>