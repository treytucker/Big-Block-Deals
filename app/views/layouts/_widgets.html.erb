

<div class="sidebar">
	
	<div class="indiv-widget">
		<div class="widget-topper"></div>
		<div class="widget-content">
			<img src="/images/sidebar-signup-title.jpg"/>
			<form class="sidebar-form">
				<label>Email</label>
				<input value="" name="email" type="text"></input>
				<label>ZIP</label>
				<input value="" name="ZIP" type="text"></input>
				<input class="submit-btn" value="Let's do this!" name="submit" type="submit"></input>
			</form>
		</div>
		<div class="widget-bottom"></div>
	</div>
	
	<% form_tag(move_dim_widgets_path, :method => "post") do %>

	<% @widgets.each do |f| %>

		
		<div class="indiv-widget">
			<div class="widget-topper"></div>
			<div class="widget-content">
			<%= hidden_field_tag "order[]", "#{f.id},#{f.order}" %>

				<% if f.text_1 %>
					<iframe width="200" height="150" src="<%= f.text_1 %>" frameborder="0" allowfullscreen></iframe>
				<% end %>
				<% if f.widget_image? %>
					<%= image_tag f.widget_image.url(:side_bar) %>
				<% end %>
				<% if f.title %>
					<h3 class="widget-title"><%= f.title %></h3>
				<% end %>
				<% if f.text_2 %>
					<span class="widget-text"><%= f.text_2 %></span>
				<% end %>
				<% if f.bottom_title %>
					<span class="minor-widget-text"><%= f.bottom_title %></span>
				<% end %>
			</div>
			<div class="widget-bottom"></div>
		</div>
	<% end %>
	
	<%= submit_tag "Save changes", :disable_with => "Please wait..." %>
	<% end %>

</div>

